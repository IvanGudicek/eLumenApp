<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elumenapp.elumenapp.activities.PersonActivity">


        <TextView
            android:id="@+id/personUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="pserson username"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/personEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/personUsername"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/personEmail"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageViewPerson"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:id="@+id/chooseCameraPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera"
            android:title="Import"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/changePersonButton" />

        <ImageView
            android:id="@+id/chooseGalleryPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery"
            android:title="Import"
            android:layout_alignTop="@+id/chooseCameraPerson"
            android:layout_toEndOf="@+id/chooseCameraPerson" />


        <RatingBar
            android:id="@+id/personRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personSwitch"
            android:layout_toEndOf="@+id/nav_camera" />

        <Switch
            android:id="@+id/personSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="automatically login"
            android:layout_below="@+id/personName"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change your \nprofile picture :)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/personRatingBar"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeThePersonButtonListener"
            android:text="change profile"
            android:id="@+id/changePersonButton"
            android:layout_above="@+id/discardPersonButton"
            android:layout_alignRight="@+id/personSwitch" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="discard changes"
            android:id="@+id/discardPersonButton"
            android:onClick="discardChangesButtonListener"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/personSwitch" />


</RelativeLayout>
