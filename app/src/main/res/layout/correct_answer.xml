<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/correctAnswerRelativeLayout"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayoutUp"
        android:layout_height="50dp">
        <include layout="@layout/buttons_answer"></include>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relativeLayoutDown"
        android:layout_below="@+id/relativeLayoutUp">
        <include layout="@layout/explanation"></include>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your answer is positive"
        android:id="@+id/textView9"
        android:layout_below="@+id/relativeLayoutDown"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="you're on the good way :)"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/scoreText"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />






</RelativeLayout>