<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/itemImageView"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:text="username"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/itemUsername"
        android:textStyle="bold"
        android:layout_below="@+id/itemImageView"
        android:layout_alignStart="@+id/itemImageView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemRatingBar"
        android:layout_alignBottom="@+id/itemImageView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>